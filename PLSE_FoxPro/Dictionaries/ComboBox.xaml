<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Style TargetType="{x:Type ComboBox}" BasedOn="{StaticResource MaterialDesignOutlinedComboBox}" x:Key="UIOutlinedComboBox">
        <Setter Property="FontSize" Value="{StaticResource MediumFontSize}"/>
        <Setter Property="materialDesign:ValidationAssist.Background" Value="Transparent"/>
        <Setter Property="materialDesign:HintAssist.Hint" Value="Выберите"/>
        <Setter Property="materialDesign:HintAssist.IsFloating" Value="False"/>
    </Style>
</ResourceDictionary>