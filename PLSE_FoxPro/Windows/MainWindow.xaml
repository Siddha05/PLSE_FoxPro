<Window x:Class="PLSE_FoxPro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PLSE_FoxPro"
        mc:Ignorable="d"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:PLSE_FoxPro.ViewModels"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainVM/>
    </Window.DataContext>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Orientation="Vertical" Grid.Column="2" Margin="5,10">
            <Button Style="{StaticResource MaterialDesignRaisedButton}" Content="Speciality" Command="{Binding Path=ShowSpecialityCommand}" Margin="10"/>
            <Button Style="{StaticResource MaterialDesignRaisedButton}" Content="MainVM" Command="{Binding Path=MainCommand}" Margin="10"/>
        </StackPanel>
        <Frame Grid.ColumnSpan="2" Margin="5" Content="{Binding Path=FrameContent}" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
